<% wrap_layout :layout do %>
  <article class="article">
    <div id="article-header" class="mb-6">
      <h1 class="text-4xl mb-1 text-center text-sky-900 md:text-left dark:text-sky-100"><%= current_article.title %></h1>

      <div id="article-meta" class="flex flex-col items-start w-full mt-2 md:flex-row md:justify-between md:items-center">
        <p class="w-full text-center md:w-auto">
          <span class="font-semibold">Written:</span>
          <%= current_article.date.strftime('%b %e, %Y') %>
          <% if current_article.data.last_updated.present? %>
            <span class="mx-1.5">/</span>
            <span class="font-semibold">Updated:</span>
            <%= DateTime.parse(current_article.data.last_updated).strftime('%b %e, %Y') %>
          <% end %>
        </p>
      </div>
    </div>

    <%= yield %>
  </article>
<% end %>
